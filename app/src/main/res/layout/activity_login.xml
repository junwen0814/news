<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/login_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?attr/colorPrimaryDark"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/img_login_img_back">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <com.github.mmin18.widget.FlexLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/img_login_logo"
            app:layout_centerX="50%"
            app:layout_top="3%" />

        <TextView
            android:id="@+id/login_activity_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_login_et"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="登录"
            android:textColor="@color/login_flag_text_color_select"
            android:textSize="18sp"
            app:layout_centerX="30%"
            app:layout_top="prev.bottom+10%" />

        <TextView
            android:id="@+id/login_activity_tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_centerX="70%"
            app:layout_top="prev.top" />

        <com.daasuu.bl.BubbleLayout
            android:id="@+id/login_activity_user_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"

            app:bl_arrowDirection="top"
            app:bl_arrowHeight="15dp"
            app:bl_arrowPosition="70dp"
            app:bl_arrowWidth="20dp"
            app:bl_strokeColor="@color/white"
            app:bl_strokeWidth="1dp"
            app:layout_centerX="50%"
            app:layout_top="prev.bottom+2%"
            app:layout_width="80%">

            <EditText
                android:id="@+id/login_activity_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="5dp"
                android:hint="请输入用户名"
                android:padding="15dp" />
        </com.daasuu.bl.BubbleLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_gray"
            app:layout_centerX="50%"
            app:layout_top="prev.bottom"
            app:layout_width="80%" />

        <EditText
            android:id="@+id/login_activity_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shage_login_pass"
            android:drawablePadding="5dp"
            android:hint="请输入密码"
            android:inputType="numberPassword"
            android:padding="15dp"
            app:layout_centerX="50%"
            app:layout_top="prev.bottom"
            app:layout_width="80%" />


        <Button
            android:id="@+id/login_activity_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fcbcbc"
            android:text="登录"
            android:textColor="@color/white"
            app:layout_centerX="50%"
            app:layout_top="prev.bottom+7%"
            app:layout_width="60%" />


    </com.github.mmin18.widget.FlexLayout>

</LinearLayout>